# https://linux.die.net/man/5/vsftpd.conf

# Original settings
listen=NO
listen_ipv6=YES
anonymous_enable=NO
local_enable=YES
dirmessage_enable=YES
use_localtime=YES
xferlog_enable=YES
connect_from_port_20=NO
secure_chroot_dir=/var/run/vsftpd/empty
pam_service_name=vsftpd.virtual

# Virtual users
virtual_use_local_privs=YES
guest_enable=YES
guest_username={{ vsftpd_user_name }}
user_config_dir=/etc/vsftpd/vuser_conf
write_enable=YES
local_umask=022
ftpd_banner=Welcome to this FTP server...

userlist_enable=YES
userlist_file=/etc/vsftpd/disabled-users
userlist_deny=YES

chroot_list_enable=YES
chroot_list_file=/etc/vsftpd/excluded-from-chroot-jail-users
chroot_local_user=YES

# SSL
rsa_cert_file={{ vsftpd_rsa_cert_file }}
rsa_private_key_file={{ vsftpd_rsa_private_key_file }}
ssl_enable=YES
force_local_data_ssl=YES
force_local_logins_ssl=YES
ssl_tlsv1=YES
ssl_sslv2=NO
ssl_sslv3=NO
require_ssl_reuse=NO
ssl_ciphers=HIGH

# Connection
max_per_ip=5
pasv_enable=YES
pasv_min_port={{ vsftpd_pasv_min_port }}
pasv_max_port={{ vsftpd_pasv_max_port }}
